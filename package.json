{
  "name": "plink-back",
  "version": "0.0.0",
  "private": true,
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js",
      "*.Spec.js"
    ]
  },
  "scripts": {
    "build": "npx npm-run-all clean transpile",
    "server": "node ./dist-server/bin/www.js",
    "dev": "npx npm-run-all build server",
    "prod": "SET NODE_ENV=production & npx npm-run-all build server",
    "transpile": "npx babel ./server --out-dir dist-server --copy-files",
    "clean": "npx rimraf dist-server",
    "watch:dev": "npx nodemon",
    "test": "jest --coverage",
    "coveralls": "jest --coverage && cat coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "bcrypt": "^4.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "~1.4.4",
    "core-js": "^3.6.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "mysql": "^2.18.1",
    "mysql2": "^2.1.0",
    "rimraf": "^3.0.2",
    "sequelize": ">=4.44.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/register": "^7.8.6",
    "babel-jest": "^25.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "coveralls": "^3.0.9",
    "isparta": "^4.1.1",
    "istanbul": "^0.4.5",
    "istanbul-coveralls": "^1.0.3",
    "jasmine": "^3.5.0",
    "jasmine-core": "^3.5.0",
    "jest": "^25.1.0",
    "nodemon": "^1.19.4",
    "sequelize-cli": "^5.5.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
